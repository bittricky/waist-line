{
	"name": "waist-line",
	"description": "Command line tool to calculate your BMI",
	"version": "1.0.0",
	"license": "MIT",
	"type": "module",
	"bin": {
		"waist-line": "index.js"
	},
	"engines": {
        "node": ">=18"
    },
	"repository": {
        "type": "git",
        "url": "https://github.com/bittricky/waist-line"
    },
	"author": {
		"name": "Mitul Patel",
		"email": "me@mitulpa.tel",
		"url": "https://mitulpa.tel"
	},
	"keywords": [
		"waist-line",
		"waistline",
		"Mitul Patel",
		"cli",
		"bmi"
	],
	"files": [
		"index.js",
		"utils",
		"README.md",
		"LICENSE"
	],
	"scripts": {
		"format": "prettier --write \"./**/*.{js,json}\"",
        "dev": "node index.js",
        "start": "node index.js",
